@using PagedList;
@using PagedList.Mvc;
@model IPagedList<blog_mvc_yunus.Models.Kategoriler>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Listele</h2>

<p>
    <a href="/Admin/AdminKategoriEkle" class="btn btn-primary">
        <span class="fa fa-2x fa-plus"> Kategori Ekle</span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Kategori Adı
           
        </th>
        <th>
            Tanım
           
        </th>
        <th>
            Resim
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tanım)
        </td>
        <td>
           <img src="@item.Resim" class="img-circle" width="100" />
        </td>
        <td>
            <a href="/Admin/AdminKategoriDuzenle/@item.KategoriId" class="btn btn-success">
                <span class="fa fa-edit"> Düzenle</span>
            </a>

            <a href="/Admin/Detay/@item.KategoriId" class="btn btn-primary">
                <span class="fa fa-info-circle"> Detay</span>
            </a>

            <a href="/Admin/Sil/@item.KategoriId" class="btn btn-danger">
                <span class="fa fa-trash"> Sil</span>
            </a>
        </td>
    </tr>
}

</table>
<div class="col-md-4 col-md-offset-4">
    <div class="pagedList">
        @Html.PagedListPager(Model, sayfa => Url.Action("Listele", new { sayfa }), PagedListRenderOptions.PageNumbersOnly)
    </div>
</div>

