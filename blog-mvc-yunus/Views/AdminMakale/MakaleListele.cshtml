@using PagedList;
@using PagedList.Mvc;
@model IPagedList<blog_mvc_yunus.Models.Makaleler>

@{
    ViewBag.Title = "MakaleListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Var olan  Tüm Makaleler</h2>

<p>
    <a href="/AdminMakale/MakaleEkle" class="btn btn-primary">
        <span class="fa fa-2x fa-plus">Makale Ekle</span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Kategori Adı
           
        </th>
        <th>
            Makale Baslığı 
        </th>
        
        <th>
            Makalenin Fotosu
            
        </th>
        <th>
            Makale Tarih
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoriler.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakaleBasligi)
        </td>
        
        <td>
            <img src="@item.MakaleFoto" class="img-rounded" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakaleTarih)
        </td>
        <td>

            <a href="/AdminMakale/MakaleDuzenle/@item.MakaleId" class="btn btn-success">
                <span class="fa fa-edit"> Düzenle</span>
            </a>

            <a href="/AdminMakale/MakaleDetay/@item.MakaleId" class="btn btn-primary">
                <span class="fa fa-list"> Detay</span>
            </a>

            <a href="/AdminMakale/MakaleSil/@item.MakaleId" class="btn btn-danger">
                <span class="fa fa-trash"> Sil</span>
            </a>
        </td>
    </tr>
}

</table>

<div class="col-md-4 col-md-offset-4">
    <div class="pagedList">
        @Html.PagedListPager(Model, sayfa => Url.Action("MakaleListele", new { sayfa }), PagedListRenderOptions.PageNumbersOnly);
    </div>
</div>
