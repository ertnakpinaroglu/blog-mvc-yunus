<div class="container">

    <div class="row">
        <div class="col-md-6 mb30">
            <div class="card">

                <div class="card-content pt20 pb20 profile-header" style="margin-top:20px">
                    <img src="@Model.UyeFoto" alt="" class="img-fluid rounded-circle">
                    <h4 class="card-title text-center mb20">@Model.UyeAdSoyad</h4>
                    <h6 class="text-small text-muted">@String.Format("{0:D}",Model.Tarih) tarihinde üye olundu.</h6>
                    <p>
                        @using (Html.BeginForm("UyeDetay", "Uye", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <h4>Kullanıcı Adı</h4>

                                @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <h4>Şifre</h4>

                                @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <h4>Ad Soyad</h4>

                                @Html.EditorFor(model => model.UyeAdSoyad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UyeAdSoyad, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <input type="submit" value="Güncelle" class="btn btn-warning" />


                                    <input type="file" id="resmimiz" name="resmimiz" accept=".jpg,.png" class="hide" />
                                    <label for="resmimiz" class="btn btn-default">Resim Seç</label>
                                    @Html.ValidationMessageFor(model => model.UyeFoto, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }
                    </p>

                    <hr>
                    <div class="row">

                        <div class="col-md-4 mb20">
                            <h5>@Model.Yorumlars.Count() <span class="fa fa-comment"></span></h5>
                            <h6 class="text-small text-muted">Yorum Yapmışsın.</h6>
                        </div>
                    </div>

                    <hr>

                    <!--skill bar-->
                </div>
                <!--content-->

            </div>
        </div>
