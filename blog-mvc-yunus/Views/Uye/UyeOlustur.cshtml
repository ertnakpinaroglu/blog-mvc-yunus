@model blog_mvc_yunus.Models.Uyeler

@{
    ViewBag.Title = "UyeOlustur";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}
@Scripts.Render("~/admin/validate_js")

<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">


<style>
    .wrapper {
        margin-top: 80px;
        margin-bottom: 20px;
    }

    form {
        width: 320px;
        margin: 0 auto;
    }

    .image-preview-input input[type=file] {
        position: absolute;
        margin: 0px;
        color: #333;
        background-color: #fff;
        border-color: #ccc;
        filter: alpha(opacity=0);
    }

    [hidden] {
        display: none !important;
    }
</style>

@using (Html.BeginForm(Html.BeginForm("UyeOlustur", "Uye", FormMethod.Post, new { enctype = "multipart/form-data" })))
{ @Html.AntiForgeryToken()


    <div class="container">
        <div class="wrapper">
            <form action="" method="post" name="Login_Form" class="form-signin">
                <h1 class="form-signin-heading" style="font-family:Lobster">Hemen Kayıt Olun!</h1>
                <hr class="colorgraph"><br>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">


                    @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı" } })
                    @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">


                    @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">


                    @Html.EditorFor(model => model.UyeAdSoyad, new { htmlAttributes = new { @class = "form-control", placeholder = "Ad Soyad" } })
                    @Html.ValidationMessageFor(model => model.UyeAdSoyad, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="btn btn-danger">

                        <input type="file" hidden accept=".jpg,.png,.jpeg" id="uyefoto" name="uyefoto" />
                        @Html.ValidationMessageFor(model => model.UyeFoto, "", new { @class = "text-danger" })

                        Resim Seç
                    </label>
                </div>

                <button class="btn btn-lg btn-primary btn-block" style="width:280px;margin-top:10px" name="Submit" value="Login" type="Submit">Kayıt Ol!</button>
            </form>
        </div>
    </div>



}


