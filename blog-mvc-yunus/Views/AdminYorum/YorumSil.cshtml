@model blog_mvc_yunus.Models.Yorumlar

@{
    ViewBag.Title = "YorumSil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Yorum Silme Sayfası</h2>

<h3>Bu yorumu silmek istediğinize emin misiniz ? </h3>
<div>
    <h4>Yorumlar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Makaleler.MakaleBasligi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Makaleler.MakaleBasligi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Uyeler.UyeAdSoyad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Uyeler.UyeAdSoyad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.YorumIcerik)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YorumIcerik)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.YorumTarihi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YorumTarihi)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="/AdminYorum/YorumListele/" class="btn btn-primary">
                <span class="fa fa-backward"> Geri </span>
            </a>
            <input type="submit" value="Sil" class="btn btn-danger" /> 
            
        </div>
    }
</div>
